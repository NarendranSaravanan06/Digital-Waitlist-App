<Window x:Class="WaitListApp.Views.HistoryViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Waitlist History Viewer"
        Height="600"
        Width="900"
        Background="#1e1e2f"
        Foreground="White"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">

            <!-- First Row: Date Pickers and Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,5">
                <Label Content="From:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="dateFrom" Width="120" Margin="0,0,10,0"/>
                <Label Content="To:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="dateTo" Width="120" Margin="0,0,10,0"/>

                <Button Content="Fetch" Width="100" Height="35" Margin="5"
                Background="#4CAF50" Foreground="White" Click="Fetch_Click"/>

                <Button Content="Back to Dashboard" Width="130" Height="35" Margin="200,5,5,5"
                Background="Indigo" Foreground="White" Click="Back_Click"/>
            </StackPanel>

            <!-- Second Row: Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="500">
                <Button Content="Update" Width="100" Height="35" Margin="35,5,35,5"
                Background="#2196F3" Foreground="White" Click="Update_Click"/>

                <Button Content="Edit" Width="100" Height="35" Margin="5,5,35,5"
                Background="#FFC107" Foreground="Black" Click="Edit_Click"/>

                <Button Content="Delete" Width="100" Height="35" Margin="5,5,35,5"
                Background="#F44336" Foreground="White" Click="Delete_Click"/>
            </StackPanel>

        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgHistory"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  Background="White"
                  Foreground="Black"
                  RowBackground="White"
                  AlternatingRowBackground="#f1f1f1"
                  BorderBrush="Gray"
                  SelectionMode="Single"
                  FontSize="14">

            <!-- Highlight modified rows -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsModified}" Value="True">
                            <Setter Property="Background" Value="LightYellow"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="SNo" Binding="{Binding SNo}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Phone No." Binding="{Binding PhoneNo}" Width="*"/>

                <DataGridComboBoxColumn Header="Status" SelectedItemBinding="{Binding Status}" Width="120">
                    <DataGridComboBoxColumn.ItemsSource>
                        <x:Array Type="{x:Type sys:String}">
                            <sys:String>Waiting</sys:String>
                            <sys:String>Completed</sys:String>
                            <sys:String>Cancelled</sys:String>
                        </x:Array>
                    </DataGridComboBoxColumn.ItemsSource>
                </DataGridComboBoxColumn>

                <DataGridTemplateColumn Header="In Time" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding InTime, StringFormat='hh\\:mm'}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding InTime, Mode=TwoWay, StringFormat='hh\\:mm'}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Out Time" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding OutTime, StringFormat='hh\\:mm'}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding OutTime, Mode=TwoWay, StringFormat='hh\\:mm'}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Date"
                        Binding="{Binding Date, StringFormat=dd/MM/yyyy}"
                        Width="120"
                        IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
