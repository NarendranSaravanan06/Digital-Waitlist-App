<Window x:Class="WaitListApp.Views.HistoryViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Waitlist History Viewer" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label Content="From:" Margin="0,0,5,0"/>
            <DatePicker x:Name="dateFrom" Width="120" Margin="0,0,10,0"/>
            <Label Content="To:" Margin="0,0,5,0"/>
            <DatePicker x:Name="dateTo" Width="120" Margin="0,0,10,0"/>
            <Button Content="Refresh" Click="Refresh_Click" Width="80"/>
            <Button Content="Back to Dashboard" Click="Back_Click" Height="40" Width="110" Margin="15,0,0,0"/>

        </StackPanel>

        <DataGrid x:Name="dgHistory" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding SNo}" Width="30"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNo}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="In Time" Binding="{Binding InTime}" Width="70"/>
                <DataGridTextColumn Header="Out Time" Binding="{Binding OutTime}" Width="70"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Edit" Width="80" Margin="0,0,10,0" Click="Edit_Click"/>
            <Button Content="Update" Width="80" Margin="0,0,10,0" Click="Update_Click"/>
            <Button Content="Delete" Width="80" Margin="0,0,10,0" Click="Delete_Click"/>
            <Button Content="Close" Width="80" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
